<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- HEADER -->
    <header class="bg-primary text-white">
        <div class="container-fluid">

            <!-- TÌM KIẾM -->
            <div class="row py-2 justify-content-center">
                <div class="col-md-6">
                    <form asp-action="Search" method="get" class="d-flex">
                        <input name="q" class="form-control me-2" type="search" placeholder="Tìm sách..." />
                        <button class="btn btn-light" type="submit">Tìm</button>
                    </form>
                </div>
            </div>

            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <!-- Logo -->
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">📘 BookStore</a>

                    <!-- Toggle -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                        <ul class="navbar-nav">
                            <li class="nav-item mx-3">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="DanhMuc">Danh mục</a>

                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="VeChungToi">Về chúng tôi</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="LienHe">Liên hệ</a>
                            </li>
                        </ul>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex">
                        <a class="btn btn-light me-2" asp-controller="Home" asp-action="Login">Đăng nhập</a>
                        <a class="btn btn-light me-2" asp-controller="Home" asp-action="Register">Đăng ký</a>
                        <a class="btn btn-outline-light" asp-controller="Home" asp-action="Cart">
                            <i class="bi bi-cart"></i>
                        </a>

                    </div>
                </div>
            </nav>
        </div>
    </header>

    <!-- NỘI DUNG -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            &copy; 2025 - BookStore - <a asp-controller="Home" asp-action="Privacy">Chính sách</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

