@model web_nha_sach_lt.Models.Sach

@{
    ViewData["Title"] = Model.TieuDe;
}

<div class="container my-5">
    <a asp-action="Index" class="text-decoration-none mb-3 d-inline-block">
        <i class="bi bi-arrow-left"></i> @Model.TieuDe
    </a>

    <div class="row g-4">
        <!-- Hình ảnh sách -->
        <div class="col-md-5 text-center">
            <img src="@Model.HinhAnh" class="img-fluid rounded shadow-sm" style="max-height: 400px;" alt="@Model.TieuDe" />
        </div>

        <!-- Thông tin sách -->
        <div class="col-md-7">
            <span class="badge bg-primary mb-2">@Model.TheLoai</span>
            <h3 class="fw-bold">@Model.TieuDe</h3>
            <p class="text-muted">Tác giả: @Model.TacGia</p>

            <div class="mb-3">
                <strong class="text-danger fs-4">@Model.Gia.ToString("N0") đ</strong>
                <span class="text-muted text-decoration-line-through ms-2">380.000 đ</span>
            </div>

            <ul class="list-unstyled">
                <li><strong>Nhà xuất bản:</strong> NXB Khoa Học</li>
                <li><strong>Số trang:</strong> 500</li>
                <li><strong>Ngôn ngữ:</strong> Tiếng Việt</li>
                <li><strong>Năm xuất bản:</strong> 2024</li>
            </ul>

            <!-- Số lượng và nút -->
            <div class="d-flex align-items-center my-3">
                <span class="me-2">Số lượng:</span>
                <div class="input-group" style="width: 100px;">
                    <button class="btn btn-outline-secondary" type="button">-</button>
                    <input type="text" class="form-control text-center" value="1" />
                    <button class="btn btn-outline-secondary" type="button">+</button>
                </div>
            </div>

            <div class="d-flex">
                <button class="btn btn-primary me-2">
                    <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                </button>
                <button class="btn btn-outline-secondary">
                    <i class="bi bi-heart"></i> Thêm vào yêu thích
                </button>
            </div>
        </div>
    </div>

    <!-- Mô tả -->
    <div class="mt-5 p-4 bg-white shadow-sm rounded">
        <h5 class="fw-bold">Mô tả sản phẩm</h5>
        <p>Cuốn sách hướng dẫn từ A đến Z về lập trình Python, phù hợp cho những ai chưa có kinh nghiệm lập trình. Bao gồm các bài tập thực hành và ví dụ minh họa.</p>
    </div>

    <!-- Sản phẩm liên quan -->
    <div class="mt-5">
        <h5 class="fw-bold">Sản phẩm liên quan</h5>
        <!-- Gợi ý sau nếu bạn cần -->
    </div>
</div>
