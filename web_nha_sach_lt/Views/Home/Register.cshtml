@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <!-- Ảnh bên trái -->
        <div class="col-md-5 text-center">
            <img src="~/images/register-placeholder.png" alt="Đăng ký" class="img-fluid border" />
        </div>

        <!-- Form bên phải -->
        <div class="col-md-6">
            <h3 class="mb-4">Đăng kí tài khoản</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }

            <form method="post" asp-action="Register">
                <div class="mb-3">
                    <label>Tên của bạn</label>
                    <input name="hoten" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Email</label>
                    <input name="email" type="email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Địa chỉ</label>
                    <input name="diachi" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Số điện thoại</label>
                    <input name="sdt" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Mật khẩu</label>
                    <input name="matkhau" type="password" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Xác nhận lại mật khẩu</label>
                    <input name="xacnhanmatkhau" type="password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
            </form>

            <div class="mt-3 d-flex justify-content-between">
                <span>Đã có tài khoản? <a asp-action="Login">Đăng nhập ngay</a></span>
                <a href="#">Quên mật khẩu</a>
            </div>
        </div>
    </div>
</div>
