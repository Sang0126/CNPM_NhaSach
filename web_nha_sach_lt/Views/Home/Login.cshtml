@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <!-- Hình ảnh bên trái -->
        <div class="col-md-6 text-center">
            <img src="~/images/login-image.png" alt="Login Image" class="img-fluid" style="max-height: 400px;" />
        </div>

        <!-- Form đăng nhập -->
        <div class="col-md-6">
            <h3 class="mb-4 fw-bold">Đăng nhập</h3>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Nhập địa chỉ email của bạn" required />
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Mật khẩu</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Mật khẩu đăng nhập" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            </form>

            <div class="d-flex justify-content-between mt-3">
                <span>
                    Bạn chưa có tài khoản?
                    <a asp-controller="Home" asp-action="Register">Đăng ký ngay</a>
                </span>
                <a href="/Account/ForgotPassword">Quên mật khẩu</a>
            </div>
        </div>
    </div>
</div>
