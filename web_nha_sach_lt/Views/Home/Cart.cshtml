@model List<web_nha_sach_lt.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
}

<h2 class="my-4">Giỏ hàng của bạn</h2>

@if (Model == null || !Model.Any())
{
    <p>Giỏ hàng trống.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Hình</th>
                <th>Tựa đề</th>
                <th>Tác giả</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="~/images/@item.HinhAnh" width="80" /></td>
                    <td>@item.TieuDe</td>
                    <td>@item.TacGia</td>
                    <td>@item.Gia đ</td>
                    <td>@item.SoLuong</td>
                    <td>@(item.Gia * item.SoLuong)đ</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.MaSach" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end fw-bold">
        Tổng cộng: @Model.Sum(x => x.Gia * x.SoLuong)đ
    </div>
}
